# .env.example for noctura-vision/backend/
# Copy this file to .env and adjust paths if needed.
# These paths are relative to the 'backend/' directory.

# Root directory for PyTorch Hub (e.g., Torchvision models) cache.
# This will result in downloaded models being saved under ./models_cache/torchvision/hub/checkpoints/
TORCH_HOME=./models_cache/torchvision

# Root directory for Hugging Face Hub models cache.
# This will result in downloaded models being saved under ./models_cache/huggingface/hub/models--...
HF_HOME=./models_cache/huggingface

